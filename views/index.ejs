<!doctype html>
<html>
<head>
	<% include inner/_meta %>
	<link rel="stylesheet" href="/css/basic.css" />
	<link rel="stylesheet" href="/css/text.css" />
	<link rel="stylesheet" href="/css/hover-imagine.css">
	<title>Nep - Chatting</title>
</head>
<body>
	<h1 title>Hi <%= req.nepUser.id %>, Welcome to Nep</h1>
	<p intro>An Chatting Board By Socket.IO</p>
		
	<a href="/profile">Profile</a>
	<a href="/login/clear">Logout</a>

	
	<ul class="board-list">
		<% BOARD_LIST.forEach((item, idx, its)=>{ %>
		<a href="/board?BOARD_ID=<%= item.name %>"><li style="background-image: url('<%= item.img %>');" class="board img-container">
			<%= item.name %>
			
			<span class="word-container">
				<span class="intro-word"><%= item.intro %></span>
				<span class="circle"></span>
			</span>
		</li></a>
		<% }); %>
	</ul>
	
	<footer>Board</footer>
	<script src="/js/jquery-3.1.0.min.js"></script>
</body>
<style>
	.board-list {
		font-size: 0; 
	}
	.board-list > a {
		font-size: 0; 
	}

	.board {
		position: relative;
		font-size: 24px; 
		display: inline-block;
		text-align: center;
		line-height: 200px; 
		background-color: #3087CB;
		color: white; 
		width: 46%; 
		margin: 16px 2%; 
		border-radius: 4px; 
		cursor: pointer;
		
		background-position: center;
		background-size: auto 100%;

		transition: all .5s; 

		z-index: 0;
	}

	.board:after {
		content: "";
		position: absolute;
		width: 100%;
		height: 100%; 
		left: 0;
		top: 0;
		background-color: rgba(0,0,0,.2);

		z-index: -1;
	}

	.board:hover {
		background-size: auto 105%; 
	}
</style>
</html>
